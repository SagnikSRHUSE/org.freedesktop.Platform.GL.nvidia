{
    "id": "org.freedesktop.Platform.GL.nvidia-@@NVIDIA_VERSION@@",
    "branch": "1.4",
    "runtime": "org.freedesktop.Platform",
    "build-extension": true,
    "sdk": "org.freedesktop.Sdk",
    "runtime-version": "22.08",
    "sdk-extensions": [],
    "separate-locales": false,
    "modules": [
        {
            "name": "nvidia",
            "buildsystem": "simple",
            "build-commands": [
                "make NVIDIA_VERSION=@@NVIDIA_VERSION@@",
                "cd $FLATPAK_DEST && $FLATPAK_BUILDER_BUILDDIR/nvidia-extract $FLATPAK_BUILDER_BUILDDIR/NVIDIA-Linux-*.run"
            ],
            "sources": [
                {
                    "type": "dir",
                    "path": "nvidia-extractor"
                },
                {
                    "type": "file",
                    "url": "@@NVIDIA_URL@@",
                    "sha256": "@@NVIDIA_SHA256@@"
                }
            ]
        }
    ]
}
